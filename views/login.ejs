<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">
    <link rel="shortcut icon" href="./image/logo.jpeg" type="image/x-icon">
</head>

<body>
    <div class="container">
        <div class="image-container">
            <img src="/image/checklist.jpg" alt="Description of image">
        </div>
        <div class="login-container">
            <form class="login-form" method="post">
                <img src="/image/logo.jpeg" alt="Logo" class="logo">
                <h2>Login</h2>
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger" id="error"><%= error %></div>
                <% } %>
                <div class="input-container">
                    <input type="email" id="email" class="input-field" placeholder=" " name="email" required>
                    <label for="email" class="input-label">Email Address</label>
                </div>
                <div class="input-container">
                    <input type="password" id="password" class="input-field" placeholder=" " name="password" required>
                    <label for="password" class="input-label">Password</label>
                </div>
                <a href="/forgot" class="forgot-password-link">Forgot Password?</a>
                <button type="submit">Login</button>
                <p class="register-link">Don't have an account? <a href="/register">Register</a></p>
            </form>
        </div>
    </div>
</body>

</html>
